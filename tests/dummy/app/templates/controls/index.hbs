{{#em-form model=model}}
  {{#em-row}}
    {{em-input property="name" label="姓名" placeholder="name"}}
    {{em-input property="password" label="密码" placeholder="password" type="password"}}
  {{/em-row}}
  {{#em-row}}
    {{em-select
      content=countries
      label="国家"
      property="country"
      prompt="--请选择国家--"
    }}
    {{em-select2
      content=provinces
      label="省份"
      property="province"
      optionValuePath="content.id"
      optionLabelPath="content.name"
      prompt="--请选择所在省份--"
    }}
  {{/em-row}}
  {{#em-row}}
    {{em-checkbox property="favious" label="篮球"}}
    {{em-checkbox property="favious" label="足球"}}
    {{em-checkbox property="favious" label="羽毛球"}}
  {{/em-row}}
  {{#em-row}}
    {{em-button text="submit" col=3 on-click="submit"}}
  {{/em-row}}
{{/em-form}}

{{#em-form model=model}}
  {{#em-row}}
    {{em-input property="name" label="name" placeholder="name"}}
    {{em-input property="password" label="password" placeholder="password" type="password"}}
  {{/em-row}}
  {{#em-row}}
    {{em-select
      content=countries
      property="country"
      prompt="--请选择国家--"
    }}
    {{em-select2
      content=provinces
      property="province"
      optionValuePath="content.id"
      optionLabelPath="content.name"
      prompt="--请选择所在省份--"
    }}
  {{/em-row}}
  {{#em-row}}
    {{em-button text="submit" col=3 on-click="submit"}}
  {{/em-row}}
{{/em-form}}
